<h3>予定を編集してください</h3>

<%= form_with model: @task do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :starting ,"開始日" %></th>
      <td><%= f.date_field :starting %></td>
    </tr>

    <tr>
      <th><%= f.label :ending ,"終了日" %></th>
      <td><%= f.date_field :ending %></td>
    </tr>

    <tr>
      <th><%= f.label :all ,"終日の場合はチェックを入れます" %></th>
      <td><%= f.check_box :all %></td>
    </tr>

    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>

  </table>

  <div>
    <ul>
      <li><%= f.submit "保存"%></li>
      <li><%= link_to "キャンセル", :tasks %></li>
    </ul>
  </div>
<% end %>