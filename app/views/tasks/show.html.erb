<h3><%= @task.title %></h3>
 
 <table>
   <tr>
     <th>開始日</th>
     <td><%= @task.starting %></td>
   </tr>
   <tr>
     <th>終了日</th>
     <td><%= @task.ending %></td>
   </tr>
   <tr>
     <th>終日</th>
     <td><%= @task.all ? "○" : nil %></td>
   </tr>
   <tr>
     <th>スケジュールメモ</th>
     <td><%= @task.memo %></td>
   </tr>
 </table>
 
 <div>
   <ul>
     <li><%= link_to "編集", edit_task_path %></li>
     <li><%= link_to "一覧に戻る", :tasks %></li>
   </ul>
 </div>
